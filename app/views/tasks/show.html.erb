<div class="text-center">
  <h2 class="mt-2"><%= @task.title %></h2>
  <p>Details: <%= @task.details %></p>
  <p>Completed? <%= @task.completed %></p>

  <%= link_to 'Back to Task List', tasks_path, class: 'btn btn-primary mb-2' %><br>
  <%= link_to 'Edit Task', tasks_edit_path(@task), class: 'btn btn-secondary mb-2'%><br>
  <%= link_to task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this task?" }, class: 'btn btn-danger mb-2' do %>
              Delete <i class="far fa-trash-alt"></i>
              <% end %>
</div>
