<div class="text-center">
  <h1> My Tasks</h1>

  <div>
      <% @tasks.each do |task| %>
        <p>
          <% if task.completed %>
            <i class="far fa-check-square mr-1"></i><%= link_to task.title, task_path(task)%>
          <% else %>
            [] <%= link_to task.title, task_path(task)%>
          <% end %>
        </p>
      <% end %>
  </div>

  <%= link_to 'Add a new task', tasks_new_path, class: 'btn btn-primary mb-2' %>
</div>
